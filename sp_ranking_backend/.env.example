# Backend environment configuration

# Finnhub API
FINNHUB_API_KEY=your_finnhub_api_key_here

# Database (SQLite path by default)
DB_URL=sqlite:///./data/app.db

# Server port
BACKEND_PORT=8000

# Processing controls
BATCH_SIZE=25
MAX_CONCURRENCY=5
CACHE_TTL_MINUTES=1440

# Export temp dir
EXPORT_TMP_DIR=./exports

# CORS allowed origins (comma-separated). Include your frontend origin during development.
ALLOWED_ORIGINS=http://localhost:3000
